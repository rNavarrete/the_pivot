
<table class="tg">
  <tr>
    <th class="tg-e3zv">Name: <br>Email: </th>
    <th class="tg-031e"><%= @current_user.full_name %><br><%= @current_user.email_address %><br>

    <th class="tg-031e"></th>
  </tr>
  <tr>
    <td class="tg-e3zv">Order #</td>
    <td class="tg-e3zv">Order created</td>
    <td class="tg-e3zv">Status</td>
  </tr>
  <% @orders.each do |order| %>
  <tr class = 'orders_smorders'>
      <td class="tg-031e" ><%= link_to order.id, order %></td>
      <td class="tg-031e"><%= order.user.created_at.strftime("%d %b. %Y") %></td>
      <td class="tg-031e"><%= order.status %></td>
    <% end %>
  </tr>
</table>
